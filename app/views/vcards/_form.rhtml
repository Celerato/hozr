<% fields_for vcard_name, vcard, :builder => Rubaidh::TabularForm::TabularFormBuilder do |address| %>
  <%= address.select 'honorific_prefix', HonorificPrefix.find(:all).collect { |prefix| prefix.name }, :label => "Anrede"  %>
  <%= address.text_field_with_auto_complete :family_name, :label => 'Nachname' %>
  <%= address.text_field_with_auto_complete :given_name, :label => 'Vorname' %>
  <%= address.text_field_with_auto_complete :street_address, :label => "Strasse"  %>
  <%= address.text_field 'postal_code', :label => "PLZ"  %>
  <%= address.text_field 'locality', :label => "Ort"  %>
<% end %>

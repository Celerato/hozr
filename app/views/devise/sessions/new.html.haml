%h2= t('devise.sign_in')
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %p
    = f.label :login, t('activerecord.attributes.user.login')
    %br/
    = f.text_field :login
  %p
    = f.label :email, t('activerecord.attributes.user.password')
    %br/
    = f.password_field :password
  - if devise_mapping.rememberable?
    %p
      = f.check_box :remember_me
      = f.label :remember_me
  %p= f.submit t('devise.sign_in')
= render :partial => "devise/shared/links"

- a_case = overview_item
%tr
  %td{:style => "width: 30%"}
    %b= link_to a_case.patient.name, patient_path(a_case.patient)
  %td{:style => "width: 10%; text-align: right"}
    = a_case.patient.birth_date
  %td{:style => "width: 40%; vertical-align: top"}
    %b= a_case.control_findings.map {|f| h(f.name)}.join('<br/>')
  %td{:style => "width: 10%; text-align: right"}
    = a_case.examination_date
  %td{:style => "width: 10%; text-align: right"}
    = link_to a_case.code_to_s, case_path(a_case)

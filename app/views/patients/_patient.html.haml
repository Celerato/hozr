%tr[patient]
  %td= link_to image_tag("select.png"), { :controller => 'patients', :action => 'edit_inline', :id => @patient, :case_id => @case }, :remote => true

  %td= patient.vcard.full_name
  %td= patient.vcard.street_address
  %td= patient.vcard.postal_code
  %td= patient.vcard.locality
  %td= patient.birth_date
  %td= patient.doctor.name if patient.doctor
  %td= patient.doctor_patient_nr
  %td= patient.insurance.vcard.full_name if patient.insurance
  %td= patient.insurance_nr

  %td= link_to image_tag("show.png"), :controller => 'patients', :action => 'show', :id => @patient
</tr>

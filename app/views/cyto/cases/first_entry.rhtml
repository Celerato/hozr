<table>
  <tr>
    <td id="head" style="min-width: 600px">
      <%= (link_to image_tag(url_for_image_column(@case.order_form, "file", :head_big)), url_for_file_column(@case.order_form, "file")) unless @case.order_form.nil? %>
    </td>
    <td>
      <%= link_to_remote image_tag('zoom-in.png'), :update => 'head', :url => { :controller => '/cyto/order_forms', :action => 'head_big', :id => @case.order_form } %>
      <%= link_to_remote image_tag('zoom-out.png'), :update => 'head', :url => { :controller => '/cyto/order_forms', :action => 'head_small', :id => @case.order_form } %>
      <%= link_to image_tag('zoom-full.png'), url_for_file_column(@case.order_form, "file") unless @case.order_form.nil? %>
      <br/><br/>
      <%= (link_to image_tag(url_for_image_column(@case.order_form, "file", :foot), :width => 450), url_for_file_column(@case.order_form, "file")) unless @case.order_form.nil? %>
    </td>
  </tr>
  <tr>
    <td style="vertical-align: top" colspan="2">
      <div id="edit_form"></div>

      <table style="width: 100%; height: 100%">
        <tr style="vertical-align: top">
          <td id="diagnoses">
            <%= error_messages_for 'case' %>
            <div id="search_form">
              <%= render :partial => '/patients/search_form' %>
            </div>
          </td>
          <td style="min-width: 200px; vertical-align: top">
            <%= render :partial => 'info', :object => @case %>
          </td>
        </tr>
      </table>
      
      <div id="search_result">
        <%= loading_indicator_tag :id => 'search' %>
      </div>
    </td>
  </tr>
</table>

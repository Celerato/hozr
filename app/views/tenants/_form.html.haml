= simple_form_for resource do |f|
  = f.fields_for :person do |p|
    = render 'people/address_form', :f => p

  %h3 Einstellungen
  .row-fluid
    .span6= f.input 'cydoc.hostname', :as => :setting_string

  = f.fields_for :settings do |s|
    .row-fluid
      .span6= s.input 'patients.sex', :label => t('activerecord.attributes.tenant.settings.patients.sex'), :as => :select, :collection => ['M', 'F'], :selected => f.object.settings['patients.sex']

  .row-fluid
    .span6= f.association :users, :label_method => :to_s

  .form-actions
    = f.button :submit


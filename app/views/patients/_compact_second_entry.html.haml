.full_name
  = link_to patient.vcard.full_name, patient
  = ' #' + patient.doctor_patient_nr.strip if patient.doctor_patient_nr.present?
.address
  = patient.vcard.street_address
  %br/
  = "#{patient.vcard.postal_code} #{patient.vcard.locality}"
  %br/
  - if patient.birth_date
    %span{:class => "#{patient.birth_date.starts_with?('01.01.') ? 'info-alert' : ''}"}= patient.birth_date
    %br/
%div
  - if patient.kvg_insurance_policy
    %i= patient.kvg_insurance_policy
    %br/
  - if patient.remarks.present?
    %i= patient.remarks
    %br/

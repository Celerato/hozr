<h1>Listing insurances</h1>

<table class="listing">
  <tr>
    <th>Name</th>
    <th>Adresse</th>
  </tr>
<% for insurance in @insurances %>
  <tr onmouseover="showActions(<%= insurance.id %>)" onmouseout="hideActions(<%= insurance.id %>)">
    <td>
      <%= link_to insurance.vcard.full_name, :action => 'show', :id => insurance %>
    </td>
    <td style="height: 32px; width: 50%">
      <span style="float: left">
        <%=h insurance.vcard.street_address %>, <%=h insurance.vcard.postal_code %> <%=h insurance.vcard.locality %>; <%=h "Tel: #{insurance.vcard.phone_number}" unless insurance.vcard.phone_number == '' %>
      </span>
      <span id="actions_<%= insurance.id %>" style="display:none; float: right">
        <%= link_to image_tag("edit"), :action => 'edit', :id => insurance %>
        <%= link_to image_tag("remove"), { :action => 'destroy', :id => insurance }, :confirm => 'Wirklich lÃ¶schen?' %>
      </span>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @insurance_pages.current.previous } if @insurance_pages.current.previous %>
<%= link_to 'Next page', { :page => @insurance_pages.current.next } if @insurance_pages.current.next %> 

<br />

<%= link_to 'New insurance', :action => 'new' %>

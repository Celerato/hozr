	<% for finding_class in PapStatesTopFindingClass.find_all_by_pap_state_id(params[:pap_state]) %>
		<%= button_to_function finding_class.finding_class.description, remote_function(:update => "findings", :position => "bottom", :url => url_for(:controller => "cyto", :action => "add_top_finding", "top_finding_id" => finding_class.finding_class.id )), :style => "height: 2.5em; width: 14em" %>
	<% end %>

	<%= form_remote_tag :update => "findings", :position => "bottom", :url => url_for(:controller => "cyto", :action => "add_finding"), :id => "finding_classes",  :after => "$('finding_class_selection').value = ''" %>
		<%= text_field_with_auto_complete :finding_class, :selection, :frequency => 0.5 %>
		<%= submit_tag "Los" %>
	<%= end_form_tag %>


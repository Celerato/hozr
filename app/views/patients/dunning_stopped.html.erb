<table class="listing">
  <tr>
    <th>Patient</th>
    <th>Bemerkungen</th>
    <th>Arzt</th>
  </tr>
  
<% for patient in @patients %>
  <tr>
    <td><%=h link_to patient.to_s, :action => 'show', :id => patient %>
    <td><%=h patient.remarks %>
    <td><%=h link_to patient.doctor, :controller => :doctors, :action => 'show', :id => patient.doctor_id %>
  </tr>
<% end %>
</table>

%h1 Anschreibliste
%table
  - for @a_case in @cases
    - a_case = @a_case
    %tr
      %td
        = link_to(image_tag(inline_order_form_url(@a_case.order_form, :type => :head)), inline_order_form_url(@a_case.order_form)) if @a_case.order_form
      %td{:style => "border-top: solid 2px; border-bottom: solid 2px"}
        %table
          %tr
            %td
              = link_to image_tag('remove.png'), {:controller => 'cases', :action => 'delete_rest_of_assigning', :assigned_at => @assigned_at, :intra_day_id => a_case.intra_day_id}, :confirm => "Aufträge ab Tagesnummer #{a_case.intra_day_id} löschen?", :post => true unless @assigned_at.nil?
          %tr
            %td Tagesnr.:
            %td= h a_case.intra_day_id
          %tr
            %td Eingangsnr:
            %td= a_case.praxistar_eingangsnr
          %tr
            %td Abstrichdatum:
            %td= a_case.examination_date
          %tr
            %td Arzt:
            %td= a_case.doctor.name
= link_to "Fertig", :action => 'first_entry_queue'

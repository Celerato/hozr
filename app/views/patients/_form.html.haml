= boot_alert(t('flash.action.dunning_stop'), 'error') if @patient.dunning_stop?

= simple_form_for @patient do |f|
  .contextual
    = contextual_link_to :directory_lookup, @patient.vcard, :icon => 'search', :remote => true, :method => :get
  %h3
    Personalien
  = render 'patients/personal_form', :f => f

  #billing_data
    .contextual
      = contextual_link_to :directory_lookup, @patient.billing_vcard, :icon => 'search', :remote => true, :method => :get
    %h3 Rechnungsdaten
    = render 'patients/billing_form', :f => f

  .row-fluid
    .span12
      = f.input :remarks, :input_html => {:class => 'span11', :rows => 4}

  .row-fluid.hide
    .form-actions
      = f.button :submit

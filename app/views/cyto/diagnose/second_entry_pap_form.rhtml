<h1>Beurteilung</h1>
<p>
	<style>
		.button-to div input{ display: inline; width: 12em; height: 3em; font-weight: bold}
	</style>
	
	<table>
		<tr>
	<% i = 1 %>
	<% for classification in Classification.find_all %>
		<td><%= button_to classification.name, { :action => "second_entry_form", :classification => classification.id }, :style => "background-color: #{classification.color}" %></td>
		<% if i % 4 == 0 %>
			<tr/>
			<tr>
		<% end %>
		<% i+= 1 %>
	<% end %>
		</tr>
	</table>
</p>

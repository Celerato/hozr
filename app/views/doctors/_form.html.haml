= error_messages_for 'doctor'
%fieldset
  %legend
    = link_to_function "Praxis", "$('private_vcard').hide(); $('praxis_vcard').show()"
    = link_to_function "Privat", "$('praxis_vcard').hide(); $('private_vcard').show()"
  %table#praxis_vcard
    = render :partial => 'vcards/form', :locals => { :vcard_name => 'praxis_vcard', :vcard => @praxis_vcard, :auto_complete => false }
  %table#private_vcard{:style => "display: none"}
    = render :partial => 'vcards/form', :locals => { :vcard_name => 'private_vcard', :vcard => @private_vcard, :auto_complete => false }
  = render :partial => "vcards/show_phone_numbers", :locals => { :vcard => @praxis_vcard } unless @praxis_vcard.nil?

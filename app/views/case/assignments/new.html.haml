.contextual
  = contextual_link_to :new, OrderForm

= boot_page_title

%h3 Barcodes
#label-button
  = link_to 'Formular anzeigen', case_label_new_path, :remote => true, :class => 'btn'
#label-form

%h3 Formulare zum Scannen
#cases-for-scanning
  = render 'cases_for_scanning', :collection => Case.for_scanning

= link_to t_action(:scan), scan_order_forms_path, :method => :post, :class => 'btn'

= simple_form_for '', :url => case_assignments_path, :method => :post, :html => {:class => 'no-well'} do |f|
  - @cases.each do |a_case|
    = f.fields_for 'case[]', a_case do |c|
      .row-fluid.well[a_case.order_form]
        .span6
          = link_to(image_tag(inline_order_form_url(a_case.order_form, :type => :head)), inline_order_form_url(a_case.order_form)) if a_case.order_form
          = c.input :order_form_id, :as => :hidden
        .span6
          = c.input :praxistar_eingangsnr, :input_html => {:tabindex => c.object.intra_day_id + 30000}
          = c.input :intra_day_id, :input_html => {:tabindex => c.object.intra_day_id}
          = c.input :examination_date, :as => :string, :input_html => {:tabindex => c.object.intra_day_id + 10000, 'data-autofocus' => true}
          = c.association :doctor, :input_html => {:class => 'select2', 'data-placeholder' => t('.choose_doctor'), :tabindex => c.object.intra_day_id + 20000}
          .form-actions= link_to 'LÃ¶schen', order_form_path(a_case.order_form), :remote => true, :method => :delete, :class => 'btn'

  .form-actions
    = f.button :submit

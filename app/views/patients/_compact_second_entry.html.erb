<div class="full_name">
  <%= link_to patient.vcard.full_name, patient %>
  <%= ' #' + patient.doctor_patient_nr.strip if patient.doctor_patient_nr.present? %>
</div>
<div class="address">
  <%= patient.vcard.street_address %><br />
  <%= "#{patient.vcard.postal_code} #{patient.vcard.locality}" %><br />
  <% unless patient.birth_date.nil? %>
    <% if patient.birth_date.starts_with?("01.01.") %><span style="background-color: red"><% end %>
    <%= patient.birth_date %><br />
    <% if patient.birth_date.starts_with?("01.01.") %></span><% end %>
  <% end %>
</div>
<div>
  <% if patient.kvg_insurance_policy %>
    <i><%= patient.kvg_insurance_policy %></i><br />
  <% end %>
  <% if patient.remarks.present? %>
    <i><%= patient.remarks %></i><br />
  <% end %>
</div>

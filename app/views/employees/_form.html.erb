<%= error_messages_for 'employee' %>

<!--[form:employee]-->
<fieldset>
  <legend>
    <%= link_to_function "Abeitsadresse", "$('vcard_work').hide(); $('vcard_private').show()" %>
    <%= link_to_function "Privatadresse", "$('vcard_private').hide(); $('vcard_work').show()" %>
  </legend>
  <table id="vcard_work">
    <%= render :partial => 'vcards/form', :locals => { :vcard_name => 'work_vcard', :vcard => @employee.work_vcard, :auto_complete => false } %>
  </table>
  <table id="vcard_private" style="display: none">
   <%= render :partial => 'vcards/form', :locals => { :vcard_name => 'private_vcard', :vcard => @employee.private_vcard, :auto_complete => false } %>
  </table>
</fieldset>

<p><label for="employee_code">Code</label><br/>
<%= text_field 'employee', 'code'  %></p>

<p><label for="employee_born_on">Geburtstag</label><br/>
<%= text_field 'employee', 'born_on'  %></p>

<p><label for="employee_workload">Pensum</label><br/>
<%= text_field 'employee', 'workload'  %></p>


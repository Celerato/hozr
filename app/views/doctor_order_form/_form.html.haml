.modal
  = modal_header 'PAP Zettel mit Arztadressen beschriften'

  .modal-body{:style => 'height: 150px'}
    = simple_form_for 'doctor_order_form', :remote => true do |f|
      .row-fluid
        .span12
          = f.input 'doctor_id', :as => :select, :collection => doctors_collection, :input_html => {'data-autofocus' => true, 'data-placeholder' => 'Leer / Arzt auswÃ¤hlen', :class => 'select2 span12'}
      .row-fluid
        .span12
          = f.input 'count'
      .row-fluid.hidden-actions
        .form-actions
          = f.button :submit

  .modal-footer
    = link_to t_action(:print), '#', :class => 'btn submit-button'
    = link_to t_action(:cancel), '#', :class => 'btn', 'data-dismiss' => 'modal'

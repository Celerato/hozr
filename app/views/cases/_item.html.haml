- case_nr = "#{item.praxistar_eingangsnr}"
- case_nr += " (#{item.intra_day_id})" unless item.intra_day_id.nil?
%tr
  %td
    = item.entry_date unless item.entry_date.nil?
    = "(#{item.first_entry_by.code})" unless item.first_entry_by.nil?
  %td= if item.ready_for_first_entry                            |
        link_to case_nr, first_entry_case_path(item)           |
      elsif item.ready_for_second_entry                        |
        link_to case_nr, second_entry_pap_form_case_path(item) |
      elsif item.ready_for_p16                                 |
        link_to case_nr, second_entry_pap_form_case_path(item) |
      else                                                     |
        link_to case_nr, result_report_case_path(item)         |
      end                                                      |
  %td{:class => "PAP_#{item.classification.code unless item.classification.nil?}"}= item.classification.name unless item.classification.nil?
  %td
    - for finding in item.finding_classes
      %div
        = finding.code
        \- #{finding.name.html_safe}
  %td= render :partial => '/patients/compact', :object => item.patient unless item.patient.nil?
  %td= item.doctor.name unless item.doctor.nil?
  %td= item.screener.code unless item.screener.nil?
  %td
    - if item.order_form
      = link_to "Auftrag", inline_order_form_url(item.order_form)
      = link_to "Klinische Symptome", inline_order_form_url(item.order_form, :type => "result_remarks")
      = link_to "Personalien", inline_order_form_url(item.order_form, :type => "address")
    %br/
    %span.slidepath_links{"data-case-id" => item.id}
  %td= "X" if item.needs_p16?
  %td= "X" if item.needs_hpv?
  %td
    sign:&nbsp;#{item.screened_at.strftime("%d.%m.%Y") unless item.screened_at.nil?}
    %br/
    vers:&nbsp;
    - for mailing in item.mailings
      = link_to mailing.created_at.strftime("%d.%m.%Y"), :controller => 'mailings', :action => :show, :id => mailing.id
    - if item.needs_p16? or item.needs_hpv?
      %br/
      - if item.hpv_p16_prepared_at
        HPV/P16:&nbsp;#{hpv_p16_prepared_text(item)}
      - else
        HPV/P16:&nbsp;
        %span{:id => "prepare_hpv_p16_#{item.id}"}= link_to image_tag('prepare_p16.png'), hpv_p16_prepared_case_path(item), :method => :post, :remote => true
  - if @include_bill
    %td
      = link_to_cydoc "Rechnung", "sessions/#{item.session_id}"
  %td{:style => "width: 8em"}
    .btn-group
      = link_to t_action('edit'), edit_case_path(item), :class => 'btn btn-mini'
      %button.btn.btn-mini.dropdown-toggle{"data-toggle" => "dropdown"}
        %span.caret
      %ul.dropdown-menu.pull-right
        = link_to t_action('delete'), case_path(item), :method => :delete, :confirm => 'Fall wirklich lÃ¶schen?' if can? :destroy, Case
        = link_to t_action('print_fax'), print_result_report_case_path(item, :page_size => 'A4'), :method => :post
        = link_to t_action('print'), print_result_report_case_path(item), :method => :post
        = link_to t_action('create_hpv_p16'), create_hpv_p16_for_case_case_path(item), :method => :post
        = link_to t_action('review_done'), review_done_case_path(item), :method => :post if item.needs_review?
        = link_to t_action('print_label'), case_label_single_label_print_path(:id => item.id), :method => :post

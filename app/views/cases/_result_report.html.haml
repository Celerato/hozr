.sheet_a5.well
  .report
    #patient
      - unless @case.patient.doctor_patient_nr.blank?
        = @case.patient.doctor_patient_nr
        %br/
      = render "/vcards/show", :vcard => @case.patient.vcard
      %br/
      = @case.patient.birth_date unless @case.patient.birth_date.nil?
      %br/
    #insurance
      - if !@case.insurance.nil?
        = @case.insurance.name
        = "##{@case.insurance_nr}" unless @case.insurance_nr.nil? or @case.insurance_nr.strip == "0" or @case.insurance_nr.strip == ""
    #doctor
      = @case.doctor.vcard.honorific_prefix if @case.doctor
      %br/
      = render "/vcards/show", :vcard => @case.doctor.vcard if @case.doctor
    #case
      Entnahme vom: #{@case.examination_date}
      %br/
      Eingang am: #{@case.entry_date}
    #subject.title
      Ihr Auftrag Nr. #{@case.praxistar_eingangsnr}
    #remarks
      = image_tag inline_order_form_url(@case.order_form, :type => :result_remarks), :size => '410x192' if @case.order_form
    #finding_title.title
      Befund
    #classification{:class => "PAP_#{h @case.classification.code unless @case.classification.nil?}"}
      = @case.classification.name unless @case.classification.nil?
    #findings
      #finding_list
        = render 'list_findings'
    #special_findings
      - for finding in @case.control_findings
        %div{:class => finding_css_class(finding)}= finding.name
      %br/
      - for finding in @case.quality_findings
        %div{:class => finding_css_class(finding)}= finding.name
    #signature
      = "Visum: #{@case.screener.vcard.abbreviated_name}, #{@case.screened_at.to_date}" if @case.screener && @case.screened_at
      - unless @case.review_by.nil?
        %br/
        = "Visum: #{@case.review_by.vcard.abbreviated_name}, #{@case.review_at.to_date}" if @case.review_by && @case.review_at

    #actions.row-fluid
      .span6
        = button_to 'Edit', edit_finding_text_case_path(@case), :remote => true, :method => :get, :class => 'btn span12'
      .span6
        = button_to "Visum: #{current_user.object.vcard.abbreviated_name}", sign_case_path(@case), :class => 'btn btn-primary span12'
        = button_to "2. Visum: #{current_user.object.vcard.abbreviated_name}", review_done_case_path(@case), :class => 'btn btn-primary span12' if @case.needs_review or @case.review_by

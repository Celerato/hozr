.contextual
  =# contextual_link_to :directory_lookup, @patient.vcard, :icon => 'search', :remote => true, :method => :get if @patient.vcard
%h3
  Personalien
= render 'patients/personal_form', :f => f

= f.fields_for :insurance_policies, @patient.kvg_insurance_policy do |insurance_policy|
  = render 'insurance_policies/form_fields', :f => insurance_policy

#billing_data
  .contextual
    =# contextual_link_to :directory_lookup, @patient.billing_vcard, :icon => 'search', :remote => true, :method => :get if @patient.billing_vcard
  %h3 Rechnungsdaten
  = render 'patients/billing_form', :f => f

.row-fluid
  .span12
    = f.input :remarks, :input_html => {:class => 'span11', :rows => 4}
